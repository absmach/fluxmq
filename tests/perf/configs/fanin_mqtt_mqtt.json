{
  "name": "topic-fanin-mqtt-mqtt",
  "description": "Config-driven topic fan-in: MQTT publishers to MQTT subscribers.",
  "pattern": "fanin",
  "flow": "mqtt-mqtt",
  "topic": "perf/topic/config/fanin/mqtt-mqtt/{run_id}",
  "qos": 2,
  "publishers": 10,
  "messages_per_publisher": 10,
  "publish_interval": "500ms",
  "subscribers": 10000,
  "wildcard_subscribers": 10,
  "wildcard_patterns": [
    "{topic}",
    "{base}/#"
  ],
  "drain_timeout": "2m",
  "payload_bytes": 256
}
